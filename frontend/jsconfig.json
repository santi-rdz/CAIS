{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@ui/*": ["src/ui/*"],
      "@features/*": ["src/features/*"],
      "@services/*": ["src/services/*"],
      "@assets/*": ["src/assets/*"],
      "@hooks/*": ["src/hooks/*"],
      "@contexts/*": ["src/contexts/*"],
      "@lib/*": ["src/lib/*"]
    }
  },
  "include": ["src"]
}
